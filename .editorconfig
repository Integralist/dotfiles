root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{rs,zig}]
indent_size = 4
indent_style = space

[{Makefile,go.mod,go.sum,*.go,.gitmodules,*.cue}]
indent_size = 4
indent_style = tab

[*.md]
eclint_indent_style = unset
indent_size = 4
trim_trailing_whitespace = false

[Dockerfile*]
indent_size = 8
indent_style = space

[*.{yml,yaml}]
eclint_indent_style = unset
indent_size = 2
indent_style = space
trim_trailing_whitespace = false
